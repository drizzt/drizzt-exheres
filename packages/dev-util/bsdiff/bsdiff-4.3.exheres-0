require common-metadata flag-o-matic toolchain-funcs

SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        app-arch/bzip2"

src_compile() {
    append-lfs-flags
    $(tc-getCC) ${CFLAGS} ${LDFLAGS} -o bsdiff bsdiff.c -lbz2 || die "failed compiling bsdiff"
    $(tc-getCC) ${CFLAGS} ${LDFLAGS} -o bspatch bspatch.c -lbz2 || die "failed compiling bspatch"
}

src_install() {
    dobin bs{diff,patch}
    doman bs{diff,patch}.1
}
