depend() {
	need net
	use dns logger
}

start() {
	ebegin "Starting isatapd"
	start-stop-daemon --start --quiet --exec /usr/sbin/isatapd -- \
		${ISATAPD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping isatapd"
	start-stop-daemon --stop --quiet --pidfile /var/run/isatapd.pid
	eend $?
}
